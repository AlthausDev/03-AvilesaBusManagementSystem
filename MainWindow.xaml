<Window x:Class="Project._04_LineasAutobuses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project._04_LineasAutobuses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Columna izquierda (autoajustable) -->
            <ColumnDefinition Width="*"/>
            <!-- Columna derecha (se expande) -->
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Página 1" Command="{Binding NavigateToLineasCommand}" />
            <Button Content="Página 2" Command="{Binding NavigateToItinerarioCommand}" />
        </StackPanel>
        
        <Frame Grid.Column="1" Name="MainFrame"/>
    </Grid>
</Window>
